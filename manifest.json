{
    "manifest_version": 3,
    "name": "Inspex",
    "version": "1.0.1",
    "background": {
        "service_worker": "service_worker.js"
    },
    "action": {
        "type": "module"
    },
    "content_scripts":[{
        "js": ["contentScript.js", "jscolor.min.js"],
        "matches":  ["*://*/*"],
        "type": "module"
    }],
    "permissions": [
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        {
            "resources": ["content.html", "content-style.css"],
            "matches": ["*://*/*"]
        }
    ]
}